<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <hr>
        <% perguntas.forEach( pergunta => { %>
            <br>
            <div class="card-body bg-light">
                <h3><%=pergunta.titulo %></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%=pergunta.id %>" class="btn btn-success"  role="button">Responder</a>
            </div>
        <% })%> 
    </div>
</body>
<% -include ('partials/footer.ejs') %>